{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "importHelpers": true,
        "jsx": "react",
        "lib": [
            "dom",
            "dom.iterable",
            "es2018",
            "es2019.array"
        ],
        "moduleResolution": "node",
        "rootDir": ".",
        "outDir": "target",
        "strict": true,
        "skipLibCheck": true,
        "target": "ES2019",
        "sourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "types": []
    }
}